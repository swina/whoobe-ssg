{
  "name": "whoobe-ssg",
  "version": "0.1.0",
  "description": "Whoobe Studio Vue3, Vite.js and WindiCSS/TailwindCSS",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "server": "nodemon",
    "whoobe": "npm run dev",
    "web": "cd ./pages/dist && http-server -p 8080 -g -d",
    "purge": "cd ./pages && npx tailwindcss -i ./input.css -o ./dist/assets/css/output.css --watch",
    "all": "npm-run-all --parallel dev server web",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview"
  },
  "dependencies": {
    "@tiptap/extension-font-family": "^2.0.0-beta.21",
    "@tiptap/extension-image": "^2.0.0-beta.27",
    "@tiptap/extension-text-align": "^2.0.0-beta.29",
    "@tiptap/extension-text-style": "^2.0.0-beta.23",
    "@tiptap/extension-underline": "^2.0.0-beta.23",
    "@tiptap/starter-kit": "^2.0.0-beta.183",
    "@tiptap/vue-3": "^2.0.0-beta.90",
    "@vue/server-renderer": "^3.2.31",
    "alpinejs": "^3.10.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "graphql": "^16.3.0",
    "graphql-request": "^4.2.0",
    "http-server": "^14.1.1",
    "multer": "^1.4.4",
    "nodemon": "^2.0.15",
    "pinia": "^2.0.11",
    "pnpm": "^6.32.1",
    "sift": "^16.0.0",
    "vue": "^3.2.31",
    "vue-i18n": "^9.2.0-beta.30",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@iconify/iconify": "^2.1.2",
    "@iconify/json": "^2.1.3",
    "@intlify/vite-plugin-vue-i18n": "^3.3.0",
    "@types/dragula": "^3.7.1",
    "@types/node": "^17.0.18",
    "@unocss/preset-uno": "^0.31.17",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vueuse/core": "^7.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "dree": "^3.3.5",
    "express": "^4.17.3",
    "fs-extra": "^10.0.1",
    "jsonpath": "^1.1.1",
    "node-localstorage": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "pathe": "^0.2.0",
    "typescript": "^4.5.5",
    "unocss": "^0.31.17",
    "unplugin-vue-components": "^0.17.18",
    "vite": "^2.8.4",
    "vite-plugin-fonts": "^0.2.2",
    "vite-plugin-mix": "^0.3.1",
    "vite-plugin-purge-icons": "^0.7.0",
    "vite-plugin-windicss": "^1.7.1",
    "vite-ssg": "^0.17.11",
    "vite-svg-loader": "^3.1.2",
    "vue-tsc": "^0.31.4",
    "windicss": "^3.4.3"
  }
}
